{
  "name": "Bookmark Pro for Chrome",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Jeff Vlahos",
  "description": "Save native bookmarks in Chrome faster.",
  "permissions": [
    "bookmarks",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
      "default_title": "Bookmark Pro for Chrome",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "chrome_ui_overrides": {
    "bookmarks_ui": {
      "remove_bookmark_shortcut": true,
      "remove_button": true
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+D",
        "mac": "Command+D",
        "chromeos": "Ctrl+Shift+D",
        "linux": "Ctrl+Shift+D"
      }
    }
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["js/selection.js"],
     "run_at": "document_start",
     "all_frames": true
   }
 ],
 "short_name": "Bookmark Pro"
}
